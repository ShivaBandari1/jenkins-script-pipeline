/*pipeline{
agent any
stages 
{
stage('Build') 
{
steps{
echo "Building the Code.........."
 sh "mvn -version"
 sh "mvn clean"
}
}
stage('Test') 
{
steps{
echo "Testing the Code.........."
sh "mvn test"
}
}
stage('Compile') 
{
steps{
echo "Compiling the Project.........."
sh "mvn compile"
}
}
stage('Deploy') 
{
steps{
echo "Deploying the Project.........."
}
}
}
}
*/
node {
	stage('Checkout code') {
         git url: 'https://github.com/jilu407/jenkins-script-pipeline.git'
           
    }
	stage('Build'){
		echo "build pass"
		sh "mvn -version"
        sh "mvn clean"
	}
	stage('test'){
		echo 'test pass'
		sh "mvn test"
	}
	stage('Compile'){
		echo 'Compile pass'
		sh "mvn compile"
	}
	stage('package'){
		echo 'Compile pass'
		sh "mvn package"
	}
	stage('Ansible Deploy'){
		echo "Deploying the Project.........."
		sh "ansible-playbook play.yml  -i /etc/ansible/hosts --user ec2-user --key-file ~/.ssh/id_rsa "
		
	}
}
